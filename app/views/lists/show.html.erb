<div class="banner">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container my-3">
  <div class="add-movie d-flex my-3 justify-content-between">
    <a href="<%= new_list_bookmark_path(@list) %>" class="btn btn-success">Add a movie</a>
  </div>
  <div class="row row-cols-1 row-cols-md-2 g-4 movie-list-card">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <div class="movie-header" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url%>);">
          <div class="header-icon-container">
          </div>
        </div>
        <!--movie-header-->
        <div class="movie-content">
          <div class="movie-content-header">
            <h3 class="movie-title"><%= bookmark.movie.title %></h3>
            <div class="imax-logo"><%= bookmark.movie.rating %> ‚≠ê</div>
          </div>
          <div class="movie-info">
            <p><%= bookmark.movie.overview %></p>
            <%= link_to "delete", bookmark_path(bookmark), method: :delete, id:"delete-bookmark", class: "hidden" %>
          </div>
        </div>
        <!--movie-content-->
      </div>
    <% end %>
  </div>
  <!--container-->
</div>
