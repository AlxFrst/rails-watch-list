<div class="banner">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container my-3">
  <div class="add-movie d-flex my-3 justify-content-between">
    <a href="<%= new_list_bookmark_path(@list) %>" class="btn btn-success">Add a movie</a>
  </div>
    <div class="row row-cols-1 row-cols-md-2 g-4 movie-list-card">
      <% @list.bookmarks.each do |bookmark| %>
      <div class="card my-3 p-3">
        <img src="https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url%>" class="card-img-top" style="height: 400px;">
        <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><small class="text-muted">Rating: <%= bookmark.movie.rating %> ‚≠ê</small></p>
        </div>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <div class="footer d-flex justify-content-between">
            <p>Comment: <%= bookmark.comment %></p>
            <%= link_to "delete", bookmark_path(bookmark), method: :delete, id:"delete-bookmark", class: "btn btn-danger" %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
